{% extends 'base.html.twig' %}
{% block body %}
    <h1>Test me!</h1>
    <div>
        <div>{{ "now" | date('Y') }}</div>
        <div>{{ "+1 year" | date }}</div>
        {# premier commentaire caché: crée une variable #}
        {% set name = "John" %}
        <h2>{{ name | upper }}</h2>
        {# crée un tableau #}
        {% set colors = ["orange", "brown", "turquoise", "blue"] %}
        <div>
            Nombre de couleurs: {{ colors | length }}
        </div>
        <div>
            {{ colors | join(' / ') }}
        </div>
        {% for color in colors %}
            <div style="background-color: {{ color }}">{{ loop.index }}.{{ color }}
                {% if (loop.last) %}
                    &nbsp;c'est la dernière couleur
                {% endif %}
            </div>
        {% endfor %}
        {# un objet #}
        {% set book = {title: 'Pifpaf', year: 2000, author: "John Bigboote"} %}
        <h3>{{ book.author }}</h3>
        <div>
            {% for key, val in book %}
                <div>{{ key }}: {{ val }}</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} | Test{% endblock %}